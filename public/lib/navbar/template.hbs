<div class="navbar-header">
  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
    <span class="sr-only">Toggle navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
  <a class="navbar-brand" href="/">S-Chat</a>
</div>
<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
   <form class="navbar-form navbar-left schat-navbar-nick-form">
    <div class="form-group">
      <input type="text" class="form-control" name="nick" value="{{nick}}" >
    </div>
    <button type="submit" class="btn btn-default schat-navbar-nick-button">Change Nick</button>
    <span class="nick error-mesg"></span>
  </form>
  <p class="navbar-text">
    {{#unless connected}}Not{{/unless}} Connected as {{nick}} on {{server}}.
  </p>
  <button type="button" name="connect" class="btn btn-default navbar-left navbar-btn">
    {{#if connected}}
      Disconnect
    {{else}}
      Connect
    {{/if}}
  </button>
  <form class="navbar-form navbar-left schat-navbar-channel-form">
    <div class="form-group">
      <input type="text" class="form-control" name="channel" placeholder="Channel Name">
    </div>
    <button type="submit" class="btn btn-default schat-navbar-join-button disabled">Join Channel</button>
    <span class="channel error-mesg"></span>
  </form>
  <ul class="nav navbar-nav navbar-right navbar-form">
    <li>
      <button type="button" name="volume_toggle" class="btn btn-default">
          <span class="glyphicon glyphicon-volume-off"></span>
      </button>
    </li>
  </ul>
</div>
